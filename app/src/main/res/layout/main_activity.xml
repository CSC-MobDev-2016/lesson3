<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="321dp"
            android:layout_height="match_parent" android:layout_gravity="center" android:weightSum="1">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText" android:layout_weight="1.00" android:layout_gravity="center_vertical"
                android:paddingRight="5dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="go"
                android:onClick="onGoClick"
                android:id="@+id/button" android:layout_gravity="center_vertical" android:paddingLeft="10dp"/>

    </LinearLayout>
</LinearLayout>